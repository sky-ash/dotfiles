{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "gtk-layer-shell": true,
    "exclusive": true,
    "passthrough": false,
    "height": 0,
    "modules-left": [
        "hyprland/workspaces"
    ],
    "modules-center": ["clock"],
    "modules-right": [
        "custom/syncdots",
        "network",
        "battery"
    ],

    "hyprland/window": {
        "format": "{}"
    },
    "custom/syncdots": {
